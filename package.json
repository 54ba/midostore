{
  "name": "next_js",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "netlify:build": "chmod +x scripts/netlify-build.sh && ./scripts/netlify-build.sh",
    "netlify:prebuild": "npm run netlify:setup",
    "netlify:postbuild": "echo 'Post-build completed'",
    "netlify:setup": "npm run netlify:install && npm run netlify:env:check",
    "netlify:install": "npm ci --production=false",
    "netlify:env:check": "node scripts/check-env.js",
    "netlify:db:setup": "npm run db:generate && npm run db:push",
    "netlify:db:seed": "npm run db:seed",
    "netlify:ai:setup": "cd ai && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "netlify:ai:train": "cd ai && source venv/bin/activate && python recommendation_engine.py --train",
    "electron:dev": "concurrently -k -n NEXT,ELECTRON -c green,blue \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "electron:build": "npm run build && electron-builder --linux AppImage --x64",
    "electron:start-prod": "node electron/main.js",
    "scrape:products": "tsx scripts/scrape-products.ts",
    "db:migrate": "tsx scripts/db-migrate.ts",
    "db:seed": "tsx scripts/db-seed.ts",
    "seed:reviews": "tsx scripts/seed-reviews.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studioc"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.31.3",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^5.0.0",
    "@types/faker": "^6.6.8",
    "axios": "^1.11.0",
    "crypto-js": "^4.2.0",
    "currency.js": "^2.0.4",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.3.1",
    "faker": "^6.6.6",
    "lucide-react": "^0.540.0",
    "netlify": "^23.2.0",
    "next": "15.3.5",
    "next-intl": "^3.0.0",
    "node-cron": "^3.0.3",
    "prisma": "^5.0.0",
    "puppeteer": "^21.0.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-adblocker": "^2.13.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "python-shell": "^5.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.62.0",
    "stripe": "^18.4.0",
    "uuid": "^11.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@netlify/plugin-nextjs": "^5.12.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.11",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^31",
    "electron-builder": "^24",
    "eslint": "9.31.0",
    "eslint-config-next": "15.4.1",
    "tailwindcss": "^4",
    "tsx": "^4.0.0",
    "typescript": "^5",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.taskernet.app",
    "productName": "TaskerNet",
    "asar": true,
    "files": [
      "electron/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": ".next/standalone"
      },
      {
        "from": ".next/static",
        "to": ".next/static"
      },
      {
        "from": "public",
        "to": "public"
      }
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "artifactName": "${productName}-${version}-linux-x64.${ext}"
    }
  }
}
