{
  "name": "next_js",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "netlify:build": "next build",
    "electron:dev": "concurrently -k -n NEXT,ELECTRON -c green,blue \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "electron:build": "npm run build && electron-builder --linux AppImage --x64",
    "electron:start-prod": "node electron/main.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "axios": "^1.11.0",
    "crypto-js": "^4.2.0",
    "lucide-react": "^0.540.0",
    "netlify": "^23.2.0",
    "next": "15.3.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.62.0",
    "stripe": "^18.4.0",
    "uuid": "^11.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^31",
    "electron-builder": "^24",
    "eslint": "9.31.0",
    "eslint-config-next": "15.4.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.taskernet.app",
    "productName": "TaskerNet",
    "asar": true,
    "files": [
      "electron/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": ".next/standalone"
      },
      {
        "from": ".next/static",
        "to": ".next/static"
      },
      {
        "from": "public",
        "to": "public"
      }
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "artifactName": "${productName}-${version}-linux-x64.${ext}"
    }
  }
}
